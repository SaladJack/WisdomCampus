<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/deep_grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:id="@+id/collection_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/service_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@color/main_blue"/>
            <TextView
                android:id="@+id/service_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/service_image"
                android:layout_centerVertical="true"
                android:text="教务服务"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


<RelativeLayout
    android:id="@+id/collection_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/collection_content_bg"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/collection_head">

    <ImageView
        android:id="@+id/collection_content_image"
        android:src="@color/main_blue"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/collection_content_title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/collection_content_image"
        android:text="2015-2016下学期成绩查询"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/deep_grey"/>
</LinearLayout>